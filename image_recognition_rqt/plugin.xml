<library path="src">
  <class name="Annotation Plugin" type="image_recognition_rqt.annotation.AnnotationPlugin" base_class_type="rqt_gui_py::Plugin">
    <description>
      A Python GUI plugin for annotating image regions
    </description>
    <qtgui>
        <group>
            <label>Image recognition</label>
            <icon type="theme">folder</icon>
            <statustip>Plugins related to image recogition.</statustip>
        </group>
      <label>ROI Annotation</label>
      <icon type="theme">system-help</icon>
      <statustip>Annotate regions in images and write the result to disk and/or call the Annotate service.</statustip>
    </qtgui>
  </class>
  <class name="Test Plugin" type="image_recognition_rqt.test.TestPlugin" base_class_type="rqt_gui_py::Plugin">
